<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.rreganjr.requel</groupId>
    <artifactId>Requel</artifactId>
    <version>1.0.2</version>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.4</version>
    </parent>
    <properties>
        <java.version>17</java.version>
        <docker.image.prefix>rreganjr</docker.image.prefix>
        <!-- Docker image name must be lowercase -->
        <docker.image.name>requel</docker.image.name>
        <transform.output.dir>${project.build.directory}/echo-jakarta</transform.output.dir>
        <echo.artifact.source.dir>${transform.output.dir}</echo.artifact.source.dir>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>[3.6.3,)</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.eclipse.transformer</groupId>
                        <artifactId>org.eclipse.transformer.cli</artifactId>
                        <version>1.0.0</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-toolchains-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>toolchain</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <toolchains>
                        <jdk>
                            <version>${java.version}</version>
                            <vendor>any</vendor>
                        </jdk>
                    </toolchains>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <executable>${project.basedir}/scripts/java17-transform.sh</executable>
                    <workingDirectory>${project.basedir}</workingDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>transform-echo2-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_App.jar</argument>
                                <argument>${transform.output.dir}/Echo2_App.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_WebContainer.jar</argument>
                                <argument>${transform.output.dir}/Echo2_WebContainer.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-webrender</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_WebRender.jar</argument>
                                <argument>${transform.output.dir}/Echo2_WebRender.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-extras-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_Extras_App.jar</argument>
                                <argument>${transform.output.dir}/Echo2_Extras_App.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-extras-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_Extras_WebContainer.jar</argument>
                                <argument>${transform.output.dir}/Echo2_Extras_WebContainer.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-filetransfer-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_FileTransfer_App.jar</argument>
                                <argument>${transform.output.dir}/Echo2_FileTransfer_App.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echo2-filetransfer-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/Echo2_FileTransfer_WebContainer.jar</argument>
                                <argument>${transform.output.dir}/Echo2_FileTransfer_WebContainer.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echopm</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/echopm.jar</argument>
                                <argument>${transform.output.dir}/echopm.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform-echopointng</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>${project.basedir}/lib/echo/echopointng-2.2.0rc2.jar</argument>
                                <argument>${transform.output.dir}/echopointng-2.2.0rc2.jar</argument>
                                <argument>-o</argument>
                                <argument>-w</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.eclipse.transformer</groupId>
                        <artifactId>org.eclipse.transformer.cli</artifactId>
                        <version>1.0.0</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>install-echo2-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_App.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2-app</artifactId>
                            <version>2.1.1a</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_WebContainer.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2-webcontainer</artifactId>
                            <version>2.1.1a</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2-webrender</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_WebRender.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2-webrender</artifactId>
                            <version>2.1.1a</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2extras-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_Extras_App.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2extras-app</artifactId>
                            <version>2.1.0a</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2extras-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_Extras_WebContainer.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2extras-webcontainer</artifactId>
                            <version>2.1.0a</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2-filetransfer-app</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_FileTransfer_App.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2-filetransfer-app</artifactId>
                            <version>2.1.1</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echo2-filetransfer-webcontainer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/Echo2_FileTransfer_WebContainer.jar</file>
                            <groupId>com.nextapp</groupId>
                            <artifactId>echo2-filetransfer-webcontainer</artifactId>
                            <version>2.1.1</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echopm</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/echopm.jar</file>
                            <groupId>com.rreganjr.echopm</groupId>
                            <artifactId>echopm</artifactId>
                            <version>1.0.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-echopointng</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${echo.artifact.source.dir}/echopointng-2.2.0rc2.jar</file>
                            <groupId>echopointng</groupId>
                            <artifactId>echopointng</artifactId>
                            <version>1.0.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>dockerfile-maven-plugin</artifactId>
                <version>1.4.13</version>
                <configuration>
                    <repository>${docker.image.prefix}/${docker.image.name}</repository>
                    <tag>${project.version}</tag>
                    <buildArgs>
                        <JAR_FILE>target/${project.build.finalName}.jar</JAR_FILE>
                    </buildArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.mysql</groupId>
                <artifactId>mysql-connector-j</artifactId>
                <version>8.4.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>docker-image</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>dockerfile-maven-plugin</artifactId>
                        <version>1.4.13</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>docker-push</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>clojars.org</id>
            <url>https://repo.clojars.org/</url>
        </repository>
    </repositories>

